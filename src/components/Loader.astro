---
// src/components/Loader.astro
interface Props {
	message?: string;
}

const { message = "Chargement..." } = Astro.props;
---

<div class="fixed inset-0 bg-black/50 flex items-center justify-center z-50" id="loader">
	<div class="bg-white rounded-2xl p-8 flex flex-col items-center gap-4 shadow-2xl">
		<div class="loader"></div>
		<p class="text-bleu-marine font-medium">{message}</p>
	</div>
</div>

<style>
	.loader {
		width: 48px;
		height: 48px;
		border: 4px solid #F5F1E8;
		border-top-color: #1C2A39;
		border-radius: 50%;
		animation: spin 1s linear infinite;
	}
	
	@keyframes spin {
		to { transform: rotate(360deg); }
	}
</style>