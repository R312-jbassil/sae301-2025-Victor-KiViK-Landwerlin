---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="Configurateur - TaVue" description="Personnalisez votre paire de lunettes en temps r√©el avec notre configurateur intuitif.">
	<Header currentPage="configurateur" />
	
	<main class="p-20 bg-gradient-to-br from-blanc-casse to-beige-lin min-h-[calc(100vh-100px)]">
		<div class="grid grid-cols-2 gap-20">
			<!-- COLONNE GAUCHE : Visualisation SVG -->
			<div class="flex flex-col gap-8">
				<div class="card p-16 flex items-center justify-center min-h-[500px]">
					<div id="svg-container" class="w-full max-w-[600px]">
						<!-- Le SVG sera inject√© ici via JavaScript -->
					</div>
				</div>
				
				<!-- Contr√¥les de vue -->
				<div class="flex gap-4 justify-center">
					<button class="px-6 py-3 bg-white rounded-lg border-2 border-gris-taupe hover:border-bleu-marine transition-colors">
						Vue de face
					</button>
					<button class="px-6 py-3 bg-white rounded-lg border-2 border-gris-taupe hover:border-bleu-marine transition-colors">
						Vue de profil
					</button>
				</div>
			</div>
			
			<!-- COLONNE DROITE : Options de configuration -->
			<div class="flex flex-col gap-8">
				<!-- Stepper -->
				<div class="flex items-center justify-between mb-4">
					<div class="step active" data-step="1">
						<div class="step-circle">1</div>
						<span>Mat√©riau</span>
					</div>
					<div class="step-line"></div>
					<div class="step" data-step="2">
						<div class="step-circle">2</div>
						<span>Couleur</span>
					</div>
					<div class="step-line"></div>
					<div class="step" data-step="3">
						<div class="step-circle">3</div>
						<span>Dimensions</span>
					</div>
					<div class="step-line"></div>
					<div class="step" data-step="4">
						<div class="step-circle">4</div>
						<span>Verres</span>
					</div>
					<div class="step-line"></div>
					<div class="step" data-step="5">
						<div class="step-circle">5</div>
						<span>Finalisation</span>
					</div>
				</div>
				
				<!-- Panneau de configuration -->
				<div class="card p-8 flex-1">
					<h2 class="text-2xl font-semibold text-bleu-marine mb-6">Personnalisez votre monture</h2>
					
					<!-- Section 1 : Mat√©riau -->
					<div class="config-section" data-section="1">
						<h3 class="text-lg font-medium text-bleu-marine mb-4">Mat√©riau de la monture</h3>
						<div class="grid grid-cols-2 gap-4">
							<button class="material-btn active" data-material="acetate">
								<span class="font-medium">Ac√©tate</span>
								<span class="text-sm text-gris-taupe">Classique</span>
							</button>
							<button class="material-btn" data-material="metal">
								<span class="font-medium">M√©tal</span>
								<span class="text-sm text-gris-taupe">L√©ger</span>
							</button>
							<button class="material-btn" data-material="bois">
								<span class="font-medium">Bois</span>
								<span class="text-sm text-gris-taupe">Naturel</span>
							</button>
							<button class="material-btn" data-material="bio">
								<span class="font-medium">Bio-ac√©tate</span>
								<span class="text-sm text-gris-taupe">√âcologique</span>
							</button>
						</div>
					</div>
					
					<!-- Section 2 : Couleurs -->
					<div class="config-section hidden" data-section="2">
						<h3 class="text-lg font-medium text-bleu-marine mb-4">Couleur de la monture</h3>
						<div class="flex gap-3 flex-wrap">
							<button class="color-btn active" data-color="#1C2A39" data-name="Bleu marine" style="background: #1C2A39" title="Bleu marine"></button>
							<button class="color-btn" data-color="#BFA58A" data-name="Brun clair" style="background: #BFA58A" title="Brun clair"></button>
							<button class="color-btn" data-color="#6E6B65" data-name="Gris taupe" style="background: #6E6B65" title="Gris taupe"></button>
							<button class="color-btn" data-color="#8B4513" data-name="√âcaille" style="background: #8B4513" title="√âcaille"></button>
							<button class="color-btn" data-color="#2C5F2D" data-name="Vert sapin" style="background: #2C5F2D" title="Vert sapin"></button>
							<button class="color-btn" data-color="#C19A6B" data-name="Camel" style="background: #C19A6B" title="Camel"></button>
							<button class="color-btn" data-color="#000000" data-name="Noir" style="background: #000000" title="Noir"></button>
							<button class="color-btn" data-color="#F5F1E8" data-name="Beige" style="background: #F5F1E8; border: 2px solid #BFA58A" title="Beige"></button>
						</div>
					</div>
					
					<!-- Section 3 : Dimensions -->
					<div class="config-section hidden" data-section="3">
						<h3 class="text-lg font-medium text-bleu-marine mb-4">Dimensions</h3>
						<div class="space-y-6">
							<div>
								<label class="block text-sm font-medium mb-2">Largeur du pont (mm)</label>
								<input type="range" min="14" max="22" value="18" class="range range-primary" id="pont-width">
								<div class="flex justify-between text-xs text-gris-taupe mt-1">
									<span>14</span>
									<span id="pont-value">18</span>
									<span>22</span>
								</div>
							</div>
							<div>
								<label class="block text-sm font-medium mb-2">Taille des verres (mm)</label>
								<input type="range" min="48" max="56" value="52" class="range range-primary" id="verre-size">
								<div class="flex justify-between text-xs text-gris-taupe mt-1">
									<span>48</span>
									<span id="verre-value">52</span>
									<span>56</span>
								</div>
							</div>
						</div>
					</div>
					
					<!-- Section 4 : Verres -->
					<div class="config-section hidden" data-section="4">
						<h3 class="text-lg font-medium text-bleu-marine mb-4">Type de verres</h3>
						<div class="space-y-4">
							<button class="lens-btn active" data-lens="transparent" data-opacity="0.1">
								<span class="font-medium">Transparents</span>
								<span class="text-sm text-gris-taupe">Vision standard</span>
							</button>
							<button class="lens-btn" data-lens="teinte" data-opacity="0.4">
								<span class="font-medium">Teint√©s</span>
								<span class="text-sm text-gris-taupe">Protection solaire</span>
							</button>
							<button class="lens-btn" data-lens="polarise" data-opacity="0.6">
								<span class="font-medium">Polaris√©s</span>
								<span class="text-sm text-gris-taupe">Anti-reflets</span>
							</button>
						</div>
					</div>
					
					<!-- Section 5 : Finalisation -->
					<div class="config-section hidden" data-section="5">
						<h3 class="text-lg font-medium text-bleu-marine mb-4">R√©capitulatif</h3>
						<div class="space-y-3 bg-beige-lin p-6 rounded-lg mb-6">
							<div class="flex justify-between">
								<span class="text-gris-taupe">Mat√©riau:</span>
								<span class="font-medium" id="recap-material">Ac√©tate</span>
							</div>
							<div class="flex justify-between">
								<span class="text-gris-taupe">Couleur:</span>
								<span class="font-medium" id="recap-color">Bleu marine</span>
							</div>
							<div class="flex justify-between">
								<span class="text-gris-taupe">Pont:</span>
								<span class="font-medium" id="recap-pont">18 mm</span>
							</div>
							<div class="flex justify-between">
								<span class="text-gris-taupe">Verres:</span>
								<span class="font-medium" id="recap-verre">52 mm</span>
							</div>
							<div class="flex justify-between">
								<span class="text-gris-taupe">Type de verre:</span>
								<span class="font-medium" id="recap-lens">Transparents</span>
							</div>
							<div class="border-t border-brun-clair mt-4 pt-4 flex justify-between text-xl">
								<span class="font-semibold">Prix:</span>
								<span class="font-semibold text-brun-clair">189 ‚Ç¨</span>
							</div>
						</div>
						<button id="save-config-btn" class="w-full btn-primary py-4 mb-3">
							üíæ Enregistrer ma cr√©ation
						</button>
					</div>
					
					<!-- Navigation buttons -->
					<div class="flex gap-4 mt-8">
						<button id="prev-btn" class="flex-1 py-3 border-2 border-bleu-marine text-bleu-marine rounded-lg hover:bg-bleu-marine hover:text-white transition-all disabled:opacity-50 disabled:cursor-not-allowed" disabled>
							Pr√©c√©dent
						</button>
						<button id="next-btn" class="flex-1 btn-primary py-3">
							Suivant
						</button>
					</div>
				</div>
				
				<!-- Section IA -->
				<div class="card p-6 bg-gradient-to-r from-beige-lin to-blanc-casse">
					<h3 class="text-lg font-medium text-bleu-marine mb-4 flex items-center gap-3">
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
							<path d="M10 3.5a1.5 1.5 0 013 0V4a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-.5a1.5 1.5 0 000 3h.5a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-.5a1.5 1.5 0 00-3 0v.5a1 1 0 01-1 1H6a1 1 0 01-1-1v-3a1 1 0 00-1-1h-.5a1.5 1.5 0 010-3H4a1 1 0 001-1V6a1 1 0 011-1h3a1 1 0 001-1v-.5z"/>
						</svg>
						Configurer avec l'IA
					</h3>
					<p class="text-sm text-gris-taupe mb-4">D√©crivez vos lunettes id√©ales en langage naturel</p>
					<textarea 
						id="ai-prompt"
						class="w-full p-3 border border-brun-clair rounded-lg resize-none focus:border-bleu-marine focus:ring-2 focus:ring-bleu-marine focus:ring-opacity-20" 
						rows="3" 
						placeholder="Ex: Je veux une monture ronde en m√©tal dor√© avec des verres teint√©s bleus..."
					></textarea>
					<button id="ai-generate-btn" class="w-full mt-3 btn-secondary py-2">
						G√©n√©rer avec l'IA
					</button>
					<div id="ai-status" class="mt-2 text-sm text-center"></div>
				</div>
			</div>
		</div>
		
		<!-- Nudge sticky en bas √† droite -->
		<div class="fixed bottom-8 right-8 card p-6 max-w-sm shadow-2xl animate-slide-in" id="nudge-save">
			<div class="flex items-start gap-4">
				<div class="text-3xl">üí°</div>
				<div>
					<h4 class="font-semibold text-bleu-marine mb-1">Ta cr√©ation t'attend !</h4>
					<p class="text-sm text-gris-taupe mb-3">Enregistre-la en 1 minute pour ne pas la perdre.</p>
					<button class="btn-primary py-2 px-4 text-sm w-full" onclick="document.getElementById('save-config-btn').click()">
						Enregistrer ma cr√©ation
					</button>
				</div>
				<button class="text-gris-taupe hover:text-bleu-marine" onclick="document.getElementById('nudge-save').style.display='none'">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
					</svg>
				</button>
			</div>
		</div>
	</main>
</Layout>

<style>
	/* Stepper styles */
	.step {
		@apply flex flex-col items-center text-center;
	}
	
	.step-circle {
		@apply w-10 h-10 rounded-full border-2 border-gris-taupe flex items-center justify-center text-gris-taupe font-medium transition-all;
	}
	
	.step.active .step-circle {
		@apply bg-bleu-marine border-bleu-marine text-white;
	}
	
	.step-line {
		@apply flex-1 h-0.5 bg-gris-taupe/30;
	}
	
	.step span {
		@apply text-xs text-gris-taupe font-medium;
	}
	
	.step.active span {
		@apply text-bleu-marine;
	}
	
	/* Material buttons */
	.material-btn {
		@apply flex flex-col items-center gap-1 p-4 border-2 border-gray-200 rounded-lg hover:border-bleu-marine transition-all cursor-pointer bg-white;
	}
	
	.material-btn.active {
		@apply border-bleu-marine bg-blue-50;
	}
	
	/* Color buttons */
	.color-btn {
		@apply w-12 h-12 rounded-full border-2 border-transparent hover:scale-110 transition-transform cursor-pointer;
	}
	
	.color-btn.active {
		@apply ring-4 ring-bleu-marine ring-offset-2;
	}
	
	/* Lens buttons */
	.lens-btn {
		@apply flex flex-col gap-1 p-4 border-2 border-gray-200 rounded-lg hover:border-bleu-marine transition-all cursor-pointer bg-white w-full text-left;
	}
	
	.lens-btn.active {
		@apply border-bleu-marine bg-blue-50;
	}
	
	/* Animations */
	@keyframes slide-in {
		from {
			transform: translateX(400px);
			opacity: 0;
		}
		to {
			transform: translateX(0);
			opacity: 1;
		}
	}
	
	.animate-slide-in {
		animation: slide-in 0.5s ease-out 2s both;
	}
</style>

<script>
	const config = {
	material: 'acetate',
	color: '#1C2A39',
	colorName: 'Bleu marine',
	pont: 18,
	verres: 52,
	lensType: 'transparent',
	lensOpacity: 0.1
};

// Import du SVG (chemin public)
fetch('/src/assets/lunettes-base.svg')
	.then(r => r.text())
	.then(svg => {
		document.getElementById('svg-container').innerHTML = svg;
		applySVGConfig();
	})
	.catch(err => console.error('Erreur chargement SVG:', err));

function applySVGConfig() {
	const svgEl = document.querySelector('#svg-container svg');
	if (!svgEl) return;
	
	// Couleur monture
	svgEl.querySelectorAll('.cls-4').forEach(path => {
		path.style.stroke = config.color;
		path.style.fill = 'none';
	});
	
	// Branches
	const branches = svgEl.querySelector('#branches');
	if (branches) {
		branches.querySelectorAll('path').forEach(path => {
			if (path.classList.contains('cls-4')) {
				path.style.stroke = config.color;
			} else if (path.classList.contains('cls-1')) {
				path.style.fill = config.color;
				path.style.opacity = '0.2';
			}
		});
	}
	
	// Monture principale
	const monture = svgEl.querySelector('#monture');
	if (monture) {
		monture.querySelectorAll('path').forEach(path => {
			if (path.classList.contains('cls-4')) {
				path.style.stroke = config.color;
				path.style.strokeWidth = '1.5px';
			}
		});
	}
	
	// Verres
	const verres = svgEl.querySelector('#verres');
	if (verres) {
		verres.querySelectorAll('path').forEach(path => {
			path.style.fill = config.color;
			path.style.opacity = config.lensOpacity;
		});
	}
}

// Gestion stepper
let currentStep = 1;
const totalSteps = 5;

function updateStep(step) {
	document.querySelectorAll('.step').forEach((el, index) => {
		if (index + 1 <= step) {
			el.classList.add('active');
		} else {
			el.classList.remove('active');
		}
	});
	
	document.querySelectorAll('.config-section').forEach(section => {
		section.classList.add('hidden');
	});
	document.querySelector(`[data-section="${step}"]`)?.classList.remove('hidden');
	
	document.getElementById('prev-btn').disabled = step === 1;
	document.getElementById('next-btn').textContent = step === totalSteps ? 'Terminer' : 'Suivant';
}

document.getElementById('next-btn')?.addEventListener('click', () => {
	if (currentStep < totalSteps) {
		currentStep++;
		updateStep(currentStep);
	}
});

document.getElementById('prev-btn')?.addEventListener('click', () => {
	if (currentStep > 1) {
		currentStep--;
		updateStep(currentStep);
	}
});

// Mat√©riaux
document.querySelectorAll('.material-btn').forEach(btn => {
	btn.addEventListener('click', () => {
		document.querySelectorAll('.material-btn').forEach(b => b.classList.remove('active'));
		btn.classList.add('active');
		config.material = btn.getAttribute('data-material');
		document.getElementById('recap-material').textContent = btn.querySelector('.font-medium').textContent;
	});
});

// Couleurs
document.querySelectorAll('.color-btn').forEach(btn => {
	btn.addEventListener('click', () => {
		document.querySelectorAll('.color-btn').forEach(b => b.classList.remove('active'));
		btn.classList.add('active');
		config.color = btn.getAttribute('data-color');
		config.colorName = btn.getAttribute('data-name');
		document.getElementById('recap-color').textContent = config.colorName;
		applySVGConfig();
	});
});

// Ranges
document.getElementById('pont-width')?.addEventListener('input', (e) => {
	config.pont = e.target.value;
	document.getElementById('pont-value').textContent = e.target.value;
	document.getElementById('recap-pont').textContent = e.target.value + ' mm';
});

document.getElementById('verre-size')?.addEventListener('input', (e) => {
	config.verres = e.target.value;
	document.getElementById('verre-value').textContent = e.target.value;
	document.getElementById('recap-verre').textContent = e.target.value + ' mm';
});

// Verres
document.querySelectorAll('.lens-btn').forEach(btn => {
	btn.addEventListener('click', () => {
		document.querySelectorAll('.lens-btn').forEach(b => b.classList.remove('active'));
		btn.classList.add('active');
		config.lensType = btn.getAttribute('data-lens');
		config.lensOpacity = parseFloat(btn.getAttribute('data-opacity'));
		document.getElementById('recap-lens').textContent = btn.querySelector('.font-medium').textContent;
		applySVGConfig();
	});
});

// SAUVEGARDE CORRIG√âE
document.getElementById('save-config-btn')?.addEventListener('click', async () => {
	const nom = prompt("Donnez un nom √† votre cr√©ation :");
	if (!nom) return;
	
	const svgCode = document.querySelector('#svg-container').innerHTML;
	
	const saveBtn = document.getElementById('save-config-btn');
	saveBtn.disabled = true;
	saveBtn.textContent = '‚è≥ Sauvegarde...';
	
	try {
		const response = await fetch('/api/saveLunettes', {
			method: 'POST',
			headers: { 'Content-Type': 'application/json' },
			credentials: 'include', // Important pour les cookies
			body: JSON.stringify({
				nom: nom,
				materiau: config.material,
				couleur: config.colorName,
				pont: config.pont,
				verres: config.verres,
				type_verre: config.lensType,
				svg_data: svgCode,
				prix: 189
			})
		});
		
		const data = await response.json();
		
		if (data.success) {
			alert('‚úÖ Cr√©ation sauvegard√©e avec succ√®s !');
			window.location.href = '/modeles';
		} else {
			throw new Error(data.error || 'Erreur inconnue');
		}
	} catch (error) {
		console.error('‚ùå Erreur sauvegarde:', error);
		alert('‚ùå Erreur: ' + error.message);
		saveBtn.disabled = false;
		saveBtn.textContent = 'üíæ Enregistrer ma cr√©ation';
	}
});

// G√âN√âRATION IA CORRIG√âE
document.getElementById('ai-generate-btn')?.addEventListener('click', async () => {
	const prompt = document.getElementById('ai-prompt').value;
	if (!prompt.trim()) {
		alert('Veuillez entrer une description');
		return;
	}
	
	const statusEl = document.getElementById('ai-status');
	const btn = document.getElementById('ai-generate-btn');
	
	statusEl.textContent = '‚è≥ G√©n√©ration en cours...';
	statusEl.className = 'mt-2 text-sm text-center text-bleu-marine';
	btn.disabled = true;
	btn.textContent = '‚è≥ G√©n√©ration...';
	
	try {
		const response = await fetch('/api/generateLunettesConfig', {
			method: 'POST',
			headers: { 'Content-Type': 'application/json' },
			body: JSON.stringify({ prompt })
		});
		
		const data = await response.json();
		
		if (!response.ok || !data.success) {
			throw new Error(data.error || 'Erreur de g√©n√©ration');
		}
		
		const aiConfig = data.config;
		console.log('‚úÖ Config IA re√ßue:', aiConfig);
		
		// Appliquer la config
		if (aiConfig.material) {
			const materialBtn = document.querySelector(`[data-material="${aiConfig.material}"]`);
			materialBtn?.click();
		}
		
		if (aiConfig.color) {
			const colorBtn = document.querySelector(`[data-color="${aiConfig.color}"]`);
			colorBtn?.click();
		}
		
		if (aiConfig.pont) {
			const pontInput = document.getElementById('pont-width');
			pontInput.value = aiConfig.pont;
			pontInput.dispatchEvent(new Event('input'));
		}
		
		if (aiConfig.verres) {
			const verreInput = document.getElementById('verre-size');
			verreInput.value = aiConfig.verres;
			verreInput.dispatchEvent(new Event('input'));
		}
		
		if (aiConfig.lensType) {
			const lensBtn = document.querySelector(`[data-lens="${aiConfig.lensType}"]`);
			lensBtn?.click();
		}
		
		statusEl.textContent = '‚úÖ Configuration appliqu√©e !';
		statusEl.className = 'mt-2 text-sm text-center text-green-600';
		
		setTimeout(() => {
			currentStep = 2;
			updateStep(currentStep);
		}, 1000);
		
	} catch (error) {
		console.error('‚ùå Erreur IA:', error);
		statusEl.textContent = '‚ùå ' + error.message;
		statusEl.className = 'mt-2 text-sm text-center text-red-600';
	} finally {
		btn.disabled = false;
		btn.textContent = 'G√©n√©rer avec l\'IA';
	}
});

// Nudge sauvegarde
document.querySelector('#nudge-save button')?.addEventListener('click', () => {
	document.getElementById('save-config-btn')?.click();
});
</script>